@* Classic router WITH a default layout so the NavMenu renders *@
<Router AppAssembly="@typeof(MinimalRouter).Assembly"
        AdditionalAssemblies="@(new[] { typeof(NerdyLou.Shared.AssemblyMarker).Assembly })">
    <Found Context="routeData">
        <RouteView RouteData="@routeData"
                   DefaultLayout="typeof(NerdyLou.Shared.Components.Layout.SharedMainLayout)" />
    </Found>
    <NotFound>
        <LayoutView Layout="typeof(NerdyLou.Shared.Components.Layout.SharedMainLayout)">
            <p>Not found.</p>
        </LayoutView>
    </NotFound>
</Router>
